<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView

        android:id="@+id/imgFoto"
        android:layout_width="@dimen/base_40"
        android:layout_height="@dimen/base_40"
        android:contentDescription="@string/imd_desc"
        android:layout_margin="@dimen/imgMargin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

    />

    <TextView

        android:id="@+id/tvOrden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/imgMargin"


        />


    <TextView

        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text = "nombre completo"
        app:layout_constraintStart_toEndOf="@+id/imgFoto"
        app:layout_constraintEnd_toStartOf="@+id/tvOrden"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/imgMargin"



        />






</androidx.constraintlayout.widget.ConstraintLayout>